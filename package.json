{
  "name": "copilot-config-manager",
  "displayName": "Copilot Config Manager",
  "description": "管理 GitHub Copilot 配置檔案的 VSCode 擴展",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "github",
    "configuration",
    "instructions"
  ],
  "activationEvents": [
    "onCommand:copilotConfigManager.openManager"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotConfigManager.openManager",
        "title": "Open Copilot Config Manager",
        "category": "Copilot Config"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copilotConfigManager.openManager",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "copilotConfigManager.openManager",
          "title": "Copilot: Open Config Manager"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}